# Application Configuration
APP_NAME=CCTV Monitoring API
APP_ENV=development
APP_PORT=8080

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=cctv_user
DB_PASSWORD=cctv_password_123
DB_NAME=cctv_monitoring
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# RTSPtoWeb Configuration
RTSP_TO_WEB_HOST=rtsptoweb
RTSP_TO_WEB_PORT=8083
RTSP_TO_WEB_API_URL=http://rtsptoweb:8083
RTSP_TO_WEB_PUBLIC_URL=http://localhost:8083

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# WebSocket Configuration
WS_ENABLED=true
CAMERA_HEALTH_CHECK_INTERVAL=30s  # Check camera health every 30 seconds

# Logging
LOG_LEVEL=debug